<Window x:Class="DirectorioClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Directorio Client" Height="480" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Formulario -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" >
            <StackPanel Margin="0,0,10,0">
                <TextBlock>Nombre</TextBlock>
                <TextBox x:Name="txtNombre" Width="200" Margin="0,4,0,8" TextChanged="Inputs_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock>Apellido Paterno</TextBlock>
                <TextBox x:Name="txtApellidoPaterno" Width="200" Margin="0,4,0,8" TextChanged="Inputs_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock>Apellido Materno</TextBlock>
                <TextBox x:Name="txtApellidoMaterno" Width="200" Margin="0,4,0,8"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock>Identificación</TextBlock>
                <TextBox x:Name="txtIdentificacion" Width="200" Margin="0,4,0,8" TextChanged="Inputs_TextChanged"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Margin="10,0,0,0">
                <Button x:Name="btnRegistrar" Content="Registrar" Width="100" Click="BtnRegistrar_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <!-- Separador -->
        <Separator Grid.Row="1"/>

        <!-- DataGrid -->
        <DataGrid x:Name="dataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" Margin="0,8,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Apellido Paterno" Binding="{Binding ApellidoPaterno}" Width="*"/>
                <DataGridTextColumn Header="Apellido Materno" Binding="{Binding ApellidoMaterno}" Width="*"/>
                <DataGridTextColumn Header="Identificación" Binding="{Binding Identificacion}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones action -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Refrescar" Width="100" Margin="0,0,8,0" Click="BtnRefrescar_Click"/>
            <Button Content="Eliminar seleccionado" Width="150" Click="BtnEliminar_Click"/>
        </StackPanel>
    </Grid>
</Window>
